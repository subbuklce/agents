# ============================================================================
# AZURE OPENAI CONFIGURATION
# ============================================================================
# Get these credentials from Azure Portal > OpenAI > Keys and Endpoint
AZURE_OPENAI_API_KEY=your_azure_openai_api_key_here
AZURE_OPENAI_ENDPOINT=https://your-resource-name.openai.azure.com/
AZURE_OPENAI_DEPLOYMENT=your_deployment_name_here
OPENAI_API_VERSION=2024-10-21

# ============================================================================
# GOOGLE SERPER API (Web Search)
# ============================================================================
# Get API key from https://serper.dev
# Used for web search functionality
GOOGLE_SERPER_API_KEY=your_google_serper_api_key_here

# ============================================================================
# PUSHOVER NOTIFICATIONS
# ============================================================================
# Get these from https://pushover.net
# Used for sending push notifications to your device
PUSHOVER_TOKEN=your_pushover_app_token_here
PUSHOVER_USER=your_pushover_user_key_here

# ============================================================================
# OPTIONAL: LANGSMITH TRACING (For debugging)
# ============================================================================
# Uncomment these if you want to trace agent execution with LangSmith
# Get API key from https://smith.langchain.com
# LANGCHAIN_TRACING_V2=true
# LANGCHAIN_API_KEY=your_langsmith_api_key_here
# LANGCHAIN_PROJECT=your_project_name
